  "feature_engineering_notes": {
    "message_length_words": "Count of words in message. Correlates strongly with context (Personal=1-20, Business=20-50, Technical=100-500+, Group=0-15)",
    "has_emoji": "Boolean. Technical context uses functional emoji only. Personal almost none. Business zero.",
    "emoji_count": "Integer. Technical may have 1-5 functional emoji. Personal 0-1. Business 0.",
    "language": "en|es|mixed. Correlates with relationship type and geography.",
    "has_technical_terms": "Boolean. Strong indicator of Business or Technical context.",
    "has_greeting": "Boolean. Common in Business first contact, casual Personal.",
    "has_question": "Boolean. Indicates engagement level and response expectation.",
    "has_request": "Boolean. Strong indicator of Business context and action requirement.",
    "formality_score": "0.0-1.0 scale. Personal=0.1-0.3, Business=0.5-0.7, Technical=0.5-0.7, VIP=0.6-0.8, Group=0.3-0.5",
    "relationship_indicators": "Array of strings. Qualitative patterns that help categorization.",
    "sender_contact_type": "friend|business|vip_client|coaching_client|group|self. Strong predictor of category.",
    "time_sensitive": "Boolean. Indicates urgency and expected response time.",
    "requires_action": "Boolean. Does recipient need to do something?"
  },
  "categorization_rules": {
    "personal": {
      "typical_length": "1-20 words",
      "emoji_usage": "Almost none (0-1)",
      "formality": "0.1-0.3",
      "language_mixing": "Natural/common",
      "indicators": ["brief", "warm", "casual", "relationship_based"]
    },
    "business": {
      "typical_length": "20-50 words",
      "emoji_usage": "Zero",
      "formality": "0.5-0.7",
      "language_mixing": "Rare (match recipient)",
      "indicators": ["formal_intro", "clear_purpose", "specific_request", "professional"]
    },
    "technical": {
      "typical_length": "100-500+ words",
      "emoji_usage": "Functional only (1-5)",
      "formality": "0.5-0.7",
      "language_mixing": "English dominant",
      "indicators": ["structured", "markdown", "status_markers", "complete_info", "technical_terms"]
    },
    "group": {
      "typical_length": "0-15 words",
      "emoji_usage": "Match group energy",
      "formality": "0.3-0.5",
      "language_mixing": "Match group norm",
      "indicators": ["minimal", "confirmatory", "observe>participate"]
    },
    "vip": {
      "typical_length": "Variable (completeness matters)",
      "emoji_usage": "Functional if technical, zero if business",
      "formality": "0.6-0.8",
      "language_mixing": "Professional English unless client Spanish",
      "indicators": ["specific", "proactive", "complete", "timeline_commitment", "transparent"]
    }
  },
  "model_training_suggestions": {
    "recommended_algorithms": [
      "Naive Bayes (baseline)",
