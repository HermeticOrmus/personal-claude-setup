        "intentPatterns": [
          "(learn|master|study).*(new|skill|technology|framework)",
          "(getting started|how to learn).*?(with|using)",
          "(quick|fast|rapid).*?(learn|tutorial)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/Learning/**",
          "**/*-learning*.md",
          "**/*-study*.md",
          "**/tutorials/**"
