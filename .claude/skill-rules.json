{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Hermetic Skill Auto-Activation Rules - Sacred automation for conscious development",
  "version": "1.0.0",

  "skills": {
    "apply-mentalism": {
      "type": "hermetic-workflow",
      "enforcement": "suggest",
      "priority": "high",
      "hermetic_principle": "The All is Mind - Clear mental models create clear code",
      "promptTriggers": {
        "keywords": [
          "architecture", "design", "mental model", "clarity", "concept",
          "planning", "structure", "organize", "confused", "messy"
        ],
        "intentPatterns": [
          "(design|architect|plan).*?(system|feature|project)",
          "(clarify|understand).*?(concept|model|architecture)",
          "(mental|thinking).*?(model|clarity)",
          "how (should|does).*?(work|organize)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/*.architecture.md",
          "**/docs/architecture/**",
          "**/design/**",
          "**/*-plan.md"
        ]
      }
    },

    "apply-correspondence": {
      "type": "hermetic-workflow",
      "enforcement": "suggest",
      "priority": "high",
      "hermetic_principle": "As Above, So Below - Patterns align across all levels",
      "promptTriggers": {
        "keywords": [
          "consistency", "pattern", "align", "mismatch", "inconsistent",
          "structure", "organization", "hierarchy", "levels"
        ],
        "intentPatterns": [
          "(align|match|mirror).*?(pattern|structure)",
          "(inconsistent|mismatch).*?(pattern|structure|design)",
          "frontend.*?backend",
          "database.*?api"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/frontend/**",
          "**/backend/**",
          "**/api/**",
          "**/database/**"
        ]
      }
    },

    "apply-vibration": {
      "type": "hermetic-workflow",
      "enforcement": "suggest",
      "priority": "medium",
      "hermetic_principle": "Nothing rests - Ship to learn, iterate to perfect",
      "promptTriggers": {
        "keywords": [
          "ship", "deploy", "launch", "release", "momentum", "stuck",
          "paralysis", "analysis paralysis", "perfectionism", "iterate"
        ],
        "intentPatterns": [
          "(ship|deploy|launch|release).*?(feature|project)",
          "(stuck|blocked|paralysis)",
          "analysis.*?paralysis",
          "(mvp|minimum.*?viable)"
        ]
      }
    },

    "apply-polarity": {
      "type": "hermetic-workflow",
      "enforcement": "suggest",
      "priority": "medium",
      "hermetic_principle": "Everything is Dual - Balance opposing forces",
      "promptTriggers": {
        "keywords": [
          "balance", "trade-off", "vs", "versus", "conflict",
          "contradiction", "opposing", "both", "either or"
        ],
        "intentPatterns": [
          "(balance|trade-?off).*?(speed|quality|performance|cost)",
          "(speed|fast).*?(vs|versus).*?(quality|correct)",
          "(either|or).*?(both|and)"
        ]
      }
    },

    "apply-rhythm": {
      "type": "hermetic-workflow",
      "enforcement": "suggest",
      "priority": "medium",
      "hermetic_principle": "Everything flows - Honor sustainable cycles",
      "promptTriggers": {
        "keywords": [
          "burnout", "sustainable", "pace", "cycle", "rhythm",
          "sprint", "marathon", "energy", "rest", "breaks"
        ],
        "intentPatterns": [
          "(sustainable|healthy).*?pace",
          "(burnout|exhausted|tired)",
          "(plan|schedule).*?(sprint|cycle|rhythm)"
        ]
      }
    },

    "apply-cause-effect": {
      "type": "hermetic-workflow",
      "enforcement": "suggest",
      "priority": "high",
      "hermetic_principle": "Every Cause has its Effect - Understand consequences",
      "promptTriggers": {
        "keywords": [
          "consequences", "effects", "impact", "downstream",
          "ripple", "cascade", "breaking change", "migration"
        ],
        "intentPatterns": [
          "(consequence|effect|impact).*?(change|decision)",
          "what (happens|breaks) (if|when)",
          "(downstream|ripple).*?(effect|impact)",
          "(breaking|major).*?change"
        ]
      }
    },

    "apply-gender": {
      "type": "hermetic-workflow",
      "enforcement": "suggest",
      "priority": "medium",
      "hermetic_principle": "Gender is in everything - Balance doing with being",
      "promptTriggers": {
        "keywords": [
          "intuition", "logic", "analysis", "feeling",
          "masculine", "feminine", "creative", "analytical"
        ],
        "intentPatterns": [
          "(balance|harmonize).*(doing|being|logic|intuition)",
          "(all|only).*(doing|planning|analyzing|building)",
          "(creative|intuitive).*(vs|and).*(logical|analytical)"
        ]
      }
    },

    "debug-like-master": {
      "type": "hermetic-workflow",
      "enforcement": "suggest",
      "priority": "high",
      "hermetic_principle": "Systematic debugging with Hermetic principles",
      "promptTriggers": {
        "keywords": [
          "bug", "debug", "error", "issue", "broken", "failing",
          "crash", "exception", "not working", "problem"
        ],
        "intentPatterns": [
          "(fix|debug|solve|investigate).*?(bug|error|issue|problem)",
          "(not|isn't|doesn't).*?(work|working)",
          "(crash|fail|throw).*?(error|exception)"
        ]
      },
      "fileTriggers": {
        "contentPatterns": [
          "throw new Error",
          "console\\.error",
          "try\\s*{[\\s\\S]*catch",
          "\\.catch\\(",
          "Promise\\.reject"
        ]
      }
    },

    "design-perfect-architecture": {
