    "n8n-wizard": {
      "type": "automation-workflow",
      "enforcement": "suggest",
      "priority": "high",
      "hermetic_principle": "Rhythm + Vibration + Correspondence - Automate workflow imports sustainably",
      "promptTriggers": {
