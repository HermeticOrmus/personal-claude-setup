      "enforcement": "suggest",
      "priority": "high",
      "hermetic_principle": "Mentalism + Correspondence + Polarity for architecture",
      "promptTriggers": {
        "keywords": [
          "architecture", "system design", "structure",
          "refactor", "redesign", "architect"
        ],
        "intentPatterns": [
          "(design|architect|refactor).*?(system|architecture)",
          "(system|application).*?(design|architecture)",
          "how.*?(architect|structure|organize)"
