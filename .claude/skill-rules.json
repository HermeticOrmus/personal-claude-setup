    "notify-ormus-whatsapp": {
      "type": "communication",
      "enforcement": "auto-trigger",
      "priority": "high",
      "hermetic_principle": "Rhythm - Timely communication maintains flow",
      "promptTriggers": {
        "keywords": [
          "send me a whatsapp", "notify me on whatsapp", "whatsapp me",
          "message me on whatsapp", "let me know on whatsapp",
          "whatsapp when done", "whatsapp notification"
        ],
        "intentPatterns": [
          "(send|notify|message).*?whatsapp",
          "whatsapp.*?(when|me|notification)",
          "(complete|done|finished).*?(notify|whatsapp)"
        ],
        "completionKeywords": [
          "research complete", "implementation complete", "refactoring complete",
          "deployment complete", "task complete", "work complete",
          "all done", "finished", "completed successfully"
        ]
      },
      "autoTriggerConditions": {
        "description": "Auto-send WhatsApp notification when major work completes",
        "triggers": [
          "User explicitly requests WhatsApp notification",
          "Major task completion detected (research, refactoring, deployment)",
          "Significant file changes committed to git",
          "Error requiring Ormus's attention"
        ]
      }
