        "intentPatterns": [
          "(make|making).*?decision",
          "(should|which).*(approach|method|technology|framework)",
          "(pros|cons|trade-?off)",
          "(evaluate|compare|assess).*?(option|choice|approach)"
        ]
      }
    },

    "learn-any-skill-fast": {
      "type": "hermetic-workflow",
      "enforcement": "suggest",
      "priority": "high",
      "hermetic_principle": "Rapid skill acquisition with Hermetic principles",
